{% extends "IDCISimpleScheduleBundle::adminbase.html.twig" %}

{% block body %}

{{ parent() }}

<div class="page-header">
    <h1>{% trans %}Event{% endtrans %}</h1>
</div>

<p>
    {{ pagerfanta(pager, 'twitter_bootstrap') }}
</p>

<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Revisionsequence</th>
            <th>Startat</th>
            <th>Duration</th>
            <th>Endat</th>
            <th>Summary</th>
            <th>Priority</th>
            <th>Rrule</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pager.currentPageResults %}
        <tr>
            <td><a href="{{ path('admin_event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.revisionSequence }}</td>
            <td>{% if entity.startAt %}{{ entity.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.duration }}</td>
            <td>{% if entity.endAt %}{{ entity.endAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.summary }}</td>
            <td>{{ entity.priority }}</td>
            <td>
            {% if entity.includedRule %}
                {{ entity.includedRule }}
            {% endif %}
            </td>
            <td>
                <a class="btn btn-block" href="{{ path('admin_event_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
            </td>
            <td>
                <a class="btn btn-block btn-primary" href="{{ path('admin_event_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
            </td>
            <td>
                {% render 'IDCISimpleScheduleBundle:Event:deleteForm' with { 'id': entity.id } %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('admin_event_new') }}">
            {% trans %}Create a new entry{% endtrans %}
        </a>
    </li>
</ul>
{% endblock body %}
