{% extends "IDCISimpleScheduleBundle::adminbase.html.twig" %}

{% block nav %}
  {% include "IDCISimpleScheduleBundle::entity_nav.html.twig" with {'entities' : {
    'Task':         { 'basepath': 'task', 'active': true },
    'Location':     { 'basepath': 'location' },
    'Activity':     { 'basepath': 'activity'},
    'ActivityType': { 'basepath': 'activitytype' }
  }} %}
{% endblock %}

{% block body %}

{{ parent() }}

<div class="page-header">
  <h1>{% trans %}List{% endtrans %}</h1>
</div>

<table class="table table-bordered table-striped table-condensed records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>day</th>
            <th>Starts_on</th>
            <th>Ends_on</th>
            <th colspan="3">{% trans %}Actions{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('task_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.day }}</td>
            <td>{{ entity.startson | date('h:i') }}</td>
            <td>{{ entity.endson | date('h:i') }}</td>    <td>
                    <a class="btn btn-block" href="{{ path('task_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
            </td>    <td>
                    <a class="btn btn-block btn-primary" href="{{ path('task_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
            </td>    <td>
                    {% render 'IDCISimpleScheduleBundle:Task:deleteForm' with { 'id': entity.id } %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="list_actions">
    <li>
        <a class="btn btn-primary" href="{{ path('task_new') }}">
            {% trans %}Create a new entry{% endtrans %}
        </a>
    </li>
</ul>
{% endblock body %}
